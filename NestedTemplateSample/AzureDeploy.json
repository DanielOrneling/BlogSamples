{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "WorkspaceName": {
        "type": "string",
        "defaultValue": "Workspace",
        "metadata": {
                "description": "The name of the workspace"
            }
        },
        "WorkspaceLocation": {
        "type": "string",
        "defaultValue": "westeurope",
        "allowedValues":[
            "westeurope",
            "northeurope",
            "centralus",
            "eastus",
            "westus"
        ],
        "metadata": {
                "description": "The location of the Log Analytics workspace"
            }
        },      
        "Tags": {
            "type": "object",
              "defaultvalue": {
                    "Department": "Finance",
                    "Environment": "Prod",
                    "Owner": "Daniel Ã–rneling"
            }
        }               
    },
    "variables": {
        "License": "free",
        "workspaceName": "[concat(parameters('WorkspaceName'), '-', parameters('Tags').Department, '-001')]",
        "QueriesLink": "https://ornelingdevevelopment.blob.core.windows.net/armtemplates/AzureMonitor/Queries/ServerQueries.json"
    },
    "resources": [
        {
            "name": "[variables('workspaceName')]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2015-11-01-preview",
            "location": "[parameters('WorkspaceLocation')]",
            "tags": {
                "Department": "[parameters('Tags').Department]",
                "Environment": "[parameters('Tags').Environment]",
                "Owner": "[parameters('Tags').Owner]"
            },
            "properties": {
                "sku": {
                    "name": "[variables('License')]"
                },
                "features": {
                    "searchVersion": 1
                }
            },
            "resources":[
                {
                    "apiVersion": "2015-11-01-preview",
                    "type": "dataSources",
                    "name": "Application",
                    "kind": "WindowsEvent",
                    "dependsOn": [
                        "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                    ],                    
                    "properties": {
                        "eventLogName": "Application",
                        "eventTypes": [
                            {
                                "eventType": "Error"
                            },
                            {
                                "eventType": "Warning"
                            },
                            {
                                "eventType": "Information"
                            }				
                        ]
                    }
                },
                {
                    "apiVersion": "2015-11-01-preview",
                    "type": "dataSources",
                    "name": "Setup",
                    "kind": "WindowsEvent",
                    "dependsOn": [
                        "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                    ],                        
                    "properties": {
                        "eventLogName": "Setup",
                        "eventTypes": [
                            {
                                "eventType": "Error"
                            },
                            {
                                "eventType": "Warning"
                            },
                            {
                                "eventType": "Information"
                            }				
                        ]
                    }
                },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "System",
                "kind": "WindowsEvent",
                    "dependsOn": [
                        "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                    ],                    
                "properties": {
                    "eventLogName": "System",
                    "eventTypes": [
                        {
                            "eventType": "Error"
                        },
                        {
                            "eventType": "Warning"
                        },
                        {
                            "eventType": "Information"
                        }				
                    ]
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "LogicalDisk1",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],    
                "properties": {
                    "ObjectName":  "LogicalDisk",
                    "CounterName":  "% Free Space",
                    "InstanceName":  "*",
                    "intervalSeconds":  600
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "LogicalDisk2",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "LogicalDisk",
                    "CounterName":  "Free Megabytes",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Memory1",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Memory",
                    "CounterName":  "Available MBytes",
                    "InstanceName":  "*",
                    "intervalSeconds":  600
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Network Adapter1",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Network Adapter",
                    "CounterName":  "Bytes Received/sec",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Network Adapter2",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Network Adapter",
                    "CounterName":  "Bytes Sent/sec",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Network Adapter3",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Network Adapter",
                    "CounterName":  "Bytes Total/sec",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Network Adapter4",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Network Adapter",
                    "CounterName":  "Current Bandwidth",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Processor1",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Processor",
                    "CounterName":  "% Interrupt Time",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Processor2",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Processor",
                    "CounterName":  "% Processor Time",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            }, 
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Processor Information1",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Processor Information",
                    "CounterName":  "% Interrupt Time",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "apiVersion": "2015-11-01-preview",
                "type": "dataSources",
                "name": "Processor Information2",
                "kind": "WindowsPerformanceCounter",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                    
                "properties": {
                    "ObjectName":  "Processor Information",
                    "CounterName":  "% Processor Time",
                    "InstanceName":  "*",
                    "intervalSeconds":  300
                }
            },
            {
                "type": "Microsoft.Resources/deployments",
                "apiVersion": "2017-05-10",
                "name": "nestedTemplate",
                "dependsOn": [
                    "[concat('Microsoft.OperationalInsights/workspaces/',variables('workspaceName'))]"
                ],                  
                "properties": {
                    "mode": "Incremental",
                    "templateLink": {
                        "uri":"[variables('QueriesLink')]",
                        "contentVersion":"1.0.0.0"
                    },
                    "parameters": {
                        "WorkSpaceName": {
                            "value": "[variables('workspaceName')]"
                        }
                    }
                }
            }            
        ]
        }                             	                                                        
    ],
    "outputs": {}
}